<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Frontend.Client.WPF.Tests.Window2"
	x:Name="Window"
	Title="Window2"
	Width="640" Height="480">

	<Grid x:Name="LayoutRoot">
		<Border SnapsToDevicePixels="True">
			<Border.ContextMenu>
				<ContextMenu>
					<MenuItem InputGestureText="Ctrl+T" Header="Test" Click="TestClick"/>
				</ContextMenu>
			</Border.ContextMenu>
			<Border.Background>
				<LinearGradientBrush EndPoint="0.854,0.5" StartPoint="0.146,0.5">
					<GradientStop Color="#FFE6C070"/>
					<GradientStop Color="#FFF6D48F" Offset="1"/>
				</LinearGradientBrush>
			</Border.Background>
		</Border>
	</Grid>
</Window>