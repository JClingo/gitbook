<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Alphora.Dataphor.Frontend.Client.Silverlight.ConnectInstances" 
	d:DesignWidth="240" d:DesignHeight="180">
	
	<StackPanel x:Name="LayoutRoot">
		<ListBox x:Name="InstanceListBox" ItemsSource="{Binding Instances}" TabIndex="0"/>
		<StackPanel Margin="0,4,0,0" HorizontalAlignment="Right" Orientation="Horizontal">
			<Button Content="Back" Click="BackClicked" Style="{StaticResource ButtonStyle}" TabIndex="200" />
			<Button Content="Connect" Click="Button_Click" Style="{StaticResource ButtonStyle}" TabIndex="100" />
		</StackPanel>
	</StackPanel>
</UserControl>