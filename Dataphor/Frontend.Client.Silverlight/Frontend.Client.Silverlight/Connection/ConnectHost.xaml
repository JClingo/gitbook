<UserControl 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Alphora.Dataphor.Frontend.Client.Silverlight.ConnectHost" 
	>
	
	<StackPanel >
		<TextBlock Text="Host Name" TextWrapping="Wrap"/>
		<TextBox x:Name="HostNameTextBox" Text="{Binding HostName, Mode=TwoWay}" TextWrapping="Wrap" MinWidth="200" TabIndex="0"/>
		<StackPanel Orientation="Horizontal" Margin="0,4,0,0" HorizontalAlignment="Right">
			<Button Content="Connect" Click="ConnectClicked" Style="{StaticResource ButtonStyle}" TabIndex="100" />
		</StackPanel>
	</StackPanel>

</UserControl>